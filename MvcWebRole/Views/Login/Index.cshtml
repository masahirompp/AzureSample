@model jp.ne.ghopper.echo.azuredemo.Dto.LoginDto
@{
    ViewBag.Title = "管理画面ログイン";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<p id="page_title">
    管理画面ログイン</p>
<p id="page_text">
    ユーザーIDとパスワードを入力してください。</p>
@if (ViewBag.Error != null)
{
<p id="error">@ViewBag.Error</p>
}
<div id="login">
    <form id="F_login" method="post" action="/Login">
    <table>
        <tbody>
            <tr>
                <th>
                    ユーザー名
                </th>
                <td>
                    <input id="userid" type="text" name="userid" value="@ViewBag.UserId" tabindex="1"/>
                </td>
            </tr>
            <tr>
                <th class="col01">
                    パスワード
                </th>
                <td>
                    <input id="password" type="password" name="password" value="" tabindex="2"/>
                </td>
            </tr>
        </tbody>
    </table>
    <input id="login_button" type="submit" name="login" value="ログイン" tabindex="3" />
    </form>
</div>
